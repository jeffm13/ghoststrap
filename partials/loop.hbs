{{! Previous/next page links - only displayed on page 2+ }}    
<div class="col-xs-12"
  {{pagination}}
</div>
 
<div class="col-sm-10 col-sm-offset-1 blog-main blog-list">
    {{! This is the post loop - each post will be output using this markup }}
    {{#foreach posts}}
    <article class="row blog-list-entry {{post_class}}">
        <header class="post-header">
            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
        </header>
        <img src="{{image}}">
        <section class="post-excerpt">
            <p>{{excerpt words="26"}}</p>
            <a class="btn btn-default read-more" role="button" href="{{url}}">More...</a>
        </section>
        <footer class="post-meta">
            <i class="fa fa-edit"></i> <span class="post-meta-author-link">{{author}}</span>
            {{#if tags}}
                <span class="post-meta-tags"></span><i class="fa fa-tags"></i> {{tags}}</span>
            {{/if}}
            <i class="fa fa-calendar"></i> <time class="post-meta-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
        </footer>
    </article>
    {{/foreach}}
    
</div>

<div class="col-xs-12">
  {{pagination}}
</div>